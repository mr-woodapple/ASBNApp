@inject IASBNDataService dataService;

@inherits LayoutComponentBase

<MudThemeProvider Theme="@LightTheme.GetTheme()"/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<PageTitle>ASBNApp</PageTitle>

<MudLayout>
    <MudMainContent>
        @* If no data is present = show input page, otherwise load normal UI *@
        @if(dataService.GetData() == null) {
            @* show open website with load file and create file buttons here *@
            <MainViewLoadData OnCallback="Callback" />
        } 
        else 
        {
            <NavBar />
            @Body
        }
    </MudMainContent>
</MudLayout>


@code {
    // Get's called from the sub component, retriggers a re-render of the page
    // to apply the data loaded (and therefore change the view)
    public async Task Callback() => StateHasChanged();
}